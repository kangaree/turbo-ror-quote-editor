<main class="container">
  <h1>Quote editor</h1>
  <p>A blazing fast quote editor built with Hotwire</p>

  <% if user_signed_in? %>
    <%= link_to "View quotes", quotes_path, class: "btn btn--dark" %>
  <% else %>
    <%= pb_rails("button", props: { text: "Login", aria: { label: "Link to Login" }, tag: "a", link: new_user_session_path }) %>
    <%= pb_rails("button", props: { text: "Sign up", variant: "secondary", aria: { label: "Link to Sign Up" }, tag: "a", link: new_user_registration_path }) %>
  <% end %>
</main>